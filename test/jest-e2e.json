{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@cheetah/dtos/(.*)": "<rootDir>/../libs/dtos/src/$1",
    "@cheetah/dtos": "<rootDir>/../libs/dtos/src",
    "@cheetah/error-handler/(.*)": "<rootDir>/../libs/error-handler/src/$1",
    "@cheetah/error-handler": "<rootDir>/../libs/error-handler/src"
  }
}